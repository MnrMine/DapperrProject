@model Dapperr.Dtos.AgentDto.CreateAgentDto
@{
    ViewData["Title"] = "CreateAgent";
    Layout = "~/Areas/Admin/Views/_AdminLayout/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Yeni Danışman Ekleme</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                    <tbody>
                        <form method="post">
                            <div class="container">
                                <br /><br />
                                <label>Ad Soyad</label>
                                <input type="text" asp-for="AgentName" class="form-control" />
                                <br />
                                <label>Resim Url</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" />
                                <br />
                                <label>Açıklama</label>
                                <textarea rows="10" class="form-control" id="myeditor" asp-for="Desciption"></textarea>
                                <br />

                                <button type="submit" class="btn btn-primary">Danışman Ekle</button>
                                <br /><br />
                            </div>
                        </form>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



