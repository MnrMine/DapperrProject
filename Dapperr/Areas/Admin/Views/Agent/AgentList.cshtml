@model List<Dapperr.Dtos.AgentDto.ResultAgentDto>
@{
    ViewData["Title"] = "AgentList";
    Layout = "~/Areas/Admin/Views/_AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Danışman Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Adı Soyadı </th>
                            <th scope="col">Resim </th>
                            <th scope="col">Açıklama</th>
                          
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @item.AgentName
                                </td>

                                <td>
                                    <img src="@item.ImageUrl" style="height:100px; width:150px" />
                                </td>
                                
                                <td>
                                    @item.Description
                                </td>
                               

                                <td><a href="/Admin/Agent/DeleteAgent/@item.AgentId" class="btn btn-warning">Sil</a></td>
                                <td><a href="/Admin/Agent/UpdateAgent/@item.AgentId" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <br />
        <td><a href="/Admin/Agent/CreateAgent/" class="btn btn-primary">Yeni Emlak Girişi</a></td>
    </div>
</div>

