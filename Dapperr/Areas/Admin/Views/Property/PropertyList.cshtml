@model List<Dapperr.Dtos.PropertyDto.ResultPropertyDto>
@{
    ViewData["Title"] = "PropertyList";
    Layout = "~/Areas/Admin/Views/_AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}


    
    

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <h3 class="mb-0">Emlak Listesi</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Resim </th>
                            <th scope="col">Lokasyon </th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Fiyat </th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>

                                <td>
                                    <img src="@item.ImageUrl" style="height:100px; width:150px" />
                                </td>
                                <td>
                                    @item.LocationName
                                </td>
                                <td>
                                    @item.PropertyTitle
                                </td>
                                <td>
                                    @item.Price
                                </td>

                                <td><a href="/Admin/Property/DeleteProperty/@item.PropertyId" class="btn btn-warning">Sil</a></td>
                                <td><a href="/Admin/Property/UpdateProperty/@item.PropertyId" class="btn btn-info">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <br />
        <td><a href="/Admin/Property/CreateProperty/" class="btn btn-primary">Yeni Emlak Girişi</a></td>
    </div>
</div>



